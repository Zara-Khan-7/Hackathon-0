# AI Employee Project â€” Environment Variables
# Copy this file to .env and fill in your credentials

# === Mode Flags ===
DRY_RUN=true                    # true = no real external actions (log only)
MOCK_DATA=true                  # true = use fake data instead of real APIs

# === Gmail API ===
GMAIL_CREDENTIALS_JSON=credentials.json   # Path to Google OAuth client secret
GMAIL_TOKEN_JSON=token.json               # Path to stored OAuth token
GMAIL_WATCH_LABEL=INBOX                   # Gmail label to monitor
GMAIL_POLL_INTERVAL=300                   # Seconds between polls

# === LinkedIn ===
LINKEDIN_EMAIL=your@email.com
LINKEDIN_PASSWORD=your_password
LINKEDIN_POLL_INTERVAL=3600              # Seconds between polls

# === MCP Email Server ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASSWORD=your_app_password          # Use Gmail App Password
EMAIL_FROM=your@gmail.com

# === Scheduler ===
DAILY_SCAN_TIME=09:00
WEEKLY_POST_DAY=friday
WEEKLY_POST_TIME=16:00
MONDAY_BRIEFING_TIME=08:00

# === Logging ===
LOG_LEVEL=INFO
