# AI Employee Project â€” Gold Tier Environment Variables
# Copy this file to .env and fill in your credentials

# === Mode Flags ===
DRY_RUN=true                    # true = no real external actions (log only)
MOCK_DATA=true                  # true = use fake data instead of real APIs

# === Gmail API ===
GMAIL_CREDENTIALS_JSON=credentials.json   # Path to Google OAuth client secret
GMAIL_TOKEN_JSON=token.json               # Path to stored OAuth token
GMAIL_WATCH_LABEL=INBOX                   # Gmail label to monitor
GMAIL_POLL_INTERVAL=300                   # Seconds between polls

# === LinkedIn ===
LINKEDIN_EMAIL=your@email.com
LINKEDIN_PASSWORD=your_password
LINKEDIN_POLL_INTERVAL=3600              # Seconds between polls

# === MCP Email Server ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASSWORD=your_app_password          # Use Gmail App Password
EMAIL_FROM=your@gmail.com

# === Odoo ERP ===
ODOO_HOST=localhost
ODOO_PORT=8069
ODOO_DB=odoo
ODOO_USER=admin
ODOO_PASSWORD=admin
ODOO_MOCK=true                           # true = use mock data, no Docker needed

# === Facebook / Meta ===
FACEBOOK_APP_ID=your_app_id
FACEBOOK_APP_SECRET=your_app_secret
FACEBOOK_PAGE_TOKEN=your_page_access_token
FACEBOOK_PAGE_ID=your_page_id
FACEBOOK_MOCK=true

# === Instagram ===
INSTAGRAM_USERNAME=your_username
INSTAGRAM_PASSWORD=your_password
INSTAGRAM_MOCK=true

# === X / Twitter ===
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_token_secret
TWITTER_BEARER_TOKEN=your_bearer_token
TWITTER_MOCK=true

# === Scheduler ===
DAILY_SCAN_TIME=09:00
WEEKLY_POST_DAY=friday
WEEKLY_POST_TIME=16:00
MONDAY_BRIEFING_TIME=08:00
SUNDAY_AUDIT_TIME=23:00

# === Logging ===
LOG_LEVEL=INFO
